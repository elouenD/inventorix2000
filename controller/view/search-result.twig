{% include('header.twig') %}
<section class="py-5">
    <div class="container">
        <button type="button" class="btn btn-link"><a href="search.php">&lt Retour</a></button>
        <h2> Resultat de la recherche   </h2>
        <br>

        <section>
            Resultat par Code Barre 
        
            <ul>
                    {% for codeBarre in codeBarre %}
                        <li class="list-group-item" onclick="toggleMaterielDetail({{codeBarre.Id}});" >{{ codeBarre.Nom }} - {{ codeBarre.Description }} - {{ codeBarre.PrixAchat }}</li>
                    {% endfor %}
            </ul>

        </section>

        <section>
            Resultat par Description 
                
                <ul>
                {% for description in description %}
                    <li class="list-group-item" onclick="toggleMaterielDetail({{description.Id}});" >{{ description.Nom }} - {{ description.Description }} - {{ description.PrixAchat }}</li>
                {% endfor %}
                </ul>
        </section>

        <section>Resultat par Nom 
        <ul>
                {% for nom in nom %}
                    <li class="list-group-item" onclick="toggleMaterielDetail({{nom.Id}});" >{{ nom.Nom }} - {{ nom.Description }} - {{ nom.PrixAchat }}</li>
                {% endfor %}
                </ul>
        </section>
    </div>
</section>

{% include('footer.twig') %}

<script>

  function toggleMaterielDetail(id){
    window.location.href = "materiel-detail.php?id="+id;
  }

</script>